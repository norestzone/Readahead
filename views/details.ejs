<!-- Conversation thread -->
<div class="commentSection">
    <div class="bookConvo">
        <h3>What Readers Are Saying:</h3>
        <% comments.forEach(comment => { %> 
            <p><%= comment.comment %> </p>
            
            <!-- edit comment -->
            <form action="/book/<%= book.isbn %>/editcomment" method="GET">
                <input type="submit" value="Edit comment" id="updateComment">
            </form>
            <br>

            <!-- delete comment -->
            <form action="/book/<%= book.isbn %>/comments/?_method=DELETE" method="POST">
                <input hidden type="number" name="id" value="<%= comment.id %> ">
                <input hidden type="number" name="id" value="<%= comment.bookId %> ">
                <input type="submit" value="Delete comment" id="deleteComment">
            </form>
            <% }) %>
        </div>

<!-- Comment section -->
    <div class="bookComment">
        <h3>Get in on the conversation:</h3>
        <form class="userComment" action="/book/<%= book.isbn %>/comments" method="POST">
            <input type="text" name="comment" id="commentText">
            <br>
            <br>
            <input type="submit" value="Post comment to the thread" id="postComment">
        </form>
    </div>
</div>